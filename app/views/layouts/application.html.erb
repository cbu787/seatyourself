<!DOCTYPE html>
<html>
  <head>
    <title>Seat Yourself</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p>
      <% if current_user %>
        Logged in as
        <% if current_user.class == Customer %>
          <%= link_to current_user.email, customers_path(current_user) %>
        <% else %>
          <%= link_to current_user.email, owner_path(current_user) %>
        <% end %>
        | <%= link_to "Home", root_path %> | <%= link_to "Log Out", logout_path, method: :delete %>
        <% else %>
          <%= link_to "Log In", new_session_path %> | <%= link_to "Customer Sign-up", new_customer_path %> | <%= link_to "Owner Sign-up", new_owner_path %>

      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
