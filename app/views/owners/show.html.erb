<h3>Your profile</h3>

<h1><%= current_user.email %></h1>

<h3>Your restaurants</h3>

<p>
  <ul>
    <% current_user.restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <ul>
          <li><%= link_to "Reservations today", restaurant_reservations_path(restaurant, when: "today") %>: <%= restaurant.reservations.where(date: Date.today).count %></li>
          <li><%= link_to "Reservations tomorrow", restaurant_reservations_path(restaurant, when: "tomorrow") %>: <%= restaurant.reservations.where(date: Date.tomorrow).count %></li>
          <p><%= link_to "Edit Restaurant", edit_restaurant_path(restaurant) %></p>
          <p><%= link_to "Remove Restaurant", restaurant_path(restaurant), method: :delete %></p>
        </ul>
    <% end %>
  </ul>
</p>

<p><%= link_to "Add new restaurant", new_restaurant_path %></p>
