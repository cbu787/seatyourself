<h1>Your profile</h1>

<h2>
  <%= current_user.email %>
</h2>

<h3>Your restaurants</h3>

<p>
  <ul>
    <%= current_user.restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
  </ul>
</p>

<p><%= link_to "Add new restaurant", new_restaurant_path %></p>
