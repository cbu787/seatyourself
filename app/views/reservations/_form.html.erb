<%= form_for [@restaurant, @reservation] do |f| %>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :time %>
    <%= f.time_select :time, minute_step: 60, ampm: true %>
  </div>

  <div>
    <%= f.label :party_size %>
    <%= f.number_field :party_size %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
