<h3>Your profile</h3>

<h1><%= current_user.email %></h1>

<h3>Upcoming reservations</h3>

<p>
  <ul>
    <% current_user.reservations.each do |reservation| %>
      <% if reservation.date > Date.today %>
        <li><%= link_to reservation.restaurant.name, restaurant_path %>: <%= reservation.date.to_formatted_s(:long) %> at <%= reservation.time.to_formatted_s(:time) %> for <%= reservation.party_size %></li>
        <p><%= link_to "Edit this reservation", edit_restaurant_reservation_path(reservation.restaurant, reservation) %></p>
        <p><%= link_to "Cancel this reservation", restaurant_reservation_path(reservation.restaurant, reservation), method: :delete %></p>
      <% end %>
    <% end %>
  </ul>
</p>

<h3>Past reservations</h3>

<p>
  <ul>
    <% current_user.reservations.each do |reservation| %>
      <% if reservation.date < Date.today %>
        <li><%= link_to reservation.restaurant.name, restaurant_path %>: <%= reservation.date.to_formatted_s(:long) %> at <%= reservation.time.to_formatted_s(:time) %> for <%= reservation.party_size %></li>
        <p><%= link_to "Delete from profle", restaurant_reservation_path(reservation.restaurant, reservation), method: :delete %></p>
      <% end %>
    <% end %>
  </ul>
</p>
