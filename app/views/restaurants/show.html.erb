<div class="container">
  <h1><%= @restaurant.name %></h1>
  <div class="row">
    <div class="col-xs-6">
      <div class="restaurant-info">
        <h4><%= @restaurant.description %></h4></br>
        <p>Capacity: <%= @restaurant.capacity %></p>
        <p>Address: <%= @restaurant.address %></p>
        <p>Phone: <%= number_to_phone(@restaurant.phone_number) %></p>
        <p>Open times: <%= @restaurant.open_time.to_formatted_s(:time) %> - <%= @restaurant.close_time.to_formatted_s(:time) %></p>
        <p>Price rating ($-$$$$$): <%= "$" * @restaurant.price %></p>
      </div>

      <% if current_user == @restaurant.owner %>
      <%= render 'owner' %>
      <% elsif current_user.class == Customer %>
      <%= render 'customer' %>
      <% else %>
      <p>Please log in as a Customer to reserve a table.</p>
      <% end %>
    </div>

    <div class="col-xs-6">
      <div class="map">
        <img src= <%= "https://maps.googleapis.com/maps/api/staticmap?size=450x300&zoom=16&markers=#{@restaurant.address.gsub(" ", "+")}&key=AIzaSyAiTVVjxjskES28BjVHKJw9bIJfcOaaXeo" %>>
      </div>
    </div>
  </div>
</div>
